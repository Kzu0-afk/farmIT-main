{
  "version": 2,
  "builds": [
    {
      "src": "farmIT/farmIT/wsgi.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.12",
        "maxLambdaSize": "50mb",
        "includeFiles": [
          "farmIT/**",
          "templates/**",
          "static/**",
          "manage.py",
          "Procfile",
          "requirements.txt"
        ]
      }
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/(.*)",
      "dest": "farmIT/farmIT/wsgi.py"
    }
  ]
}

